{
    "name": "exan/dhp",
    "description": "Discord API & WS wrapper",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Exan\\Dhp\\": "src/",
            "Tests\\Exan\\Dhp\\": "tests/"
        }
    },
    "require": {
        "react/event-loop": "^1.3.0",
        "ratchet/pawl": "^0.4.1",
        "netresearch/jsonmapper": "^4.1",
        "evenement/evenement": "^3.0.0",
        "nesbot/carbon": "^2.64",
        "discord-php/http": "^10.1",
        "monolog/monolog": "^3.2",
        "ramsey/uuid": "^4.7",
        "ralouphie/mimey": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "dev-master",
        "seregazhuk/react-promise-testing": "^0.6.1"
    },
    "scripts": {
        "post-update-cmd": "composer install --working-dir=phpcs",
        "phpcs": "./phpcs/vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "./vendor/bin/phpunit tests/",
        "test-coverage": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --coverage-text tests/",
        "test-coverage-html": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --coverage-html .phpunit.cache/cov-html tests/"
    }
}
